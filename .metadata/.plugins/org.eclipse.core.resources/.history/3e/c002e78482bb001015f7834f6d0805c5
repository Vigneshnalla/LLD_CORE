package main.java.com.vignesh.librarymanagement.model.people;

import java.util.Date;

import main.java.com.vignesh.librarymanagement.LibraryManagementSystem;
import main.java.com.vignesh.librarymanagement.model.book.BookItem;

public class Librarian extends Account {
	private Date joiningDate;

	public Date getJoiningDate() {
		return joiningDate;
	}

	public void setJoiningDate(Date joiningDate) {
		this.joiningDate = joiningDate;
	}

	 public boolean addBookItem(BookItem bookItem) {
	        if (bookItem == null) {
	            return false;
	        }
	        getInstance().addBook(bookItem);
	        return true;
	 }

	public void removeBookItem(BookItem bookItem) {
		getInstance().removeBook(bookItem);
	}

	public void blockMemberId(String memberId) {
		getInstance().blockMember(memberId);
	}

	public void unblockMemberId(String memberId) {
		getInstance().unblockMemberId(memberId);
	}
	
	public LibraryManagementSystem getInstance() {
		return LibraryManagementSystem.getInstance();
	}

}
