package main.java.com.vignesh.librarymanagement.model.people;

import java.util.Date;

package main.java.com.vignesh.librarymanagement.model.people;

import java.util.Date;

public class LibraryCard {
    private String cardNo;       // Unique card number assigned to each member
    private String barcode;      // Barcode printed on the card for scanning
    private boolean active;      // Indicates if the card is active
    private Date issuedAt;       // When the card was issued
    private Date expiryDate;     // When the membership expires

    // --- Getters and Setters ---
    public String getCardNo() {
        return cardNo;
    }

    public void setCardNo(String cardNo) {
        this.cardNo = cardNo;
    }

    public String getBarcode() {
        return barcode;
    }

    public void setBarcode(String barcode) {
        this.barcode = barcode;
    }

    public boolean isActive() {
        return active;
    }

    public void setActive(boolean active) {
        this.active = active;
    }

    public Date getIssuedAt() {
        return issuedAt;
    }

    public void setIssuedAt(Date issuedAt) {
        this.issuedAt = issuedAt;
    }

    public Date getExpiryDate() {
        return expiryDate;
    }

    public void setExpiryDate(Date expiryDate) {
        this.expiryDate = expiryDate;
    }

    // --- Utility methods ---

    /** Checks if the library card is expired based on current date. */
    public boolean isExpired() {
        if (expiryDate == null) return true;
        return new Date().after(expiryDate);
    }

    /** Checks if the card is valid (active and not expired). */
    public boolean isValid() {
        return active && !isExpired();
    }

    @Override
    public String toString() {
        return "LibraryCard [cardNo=" + cardNo + ", barcode=" + barcode +
               ", active=" + active + ", issuedAt=" + issuedAt +
               ", expiryDate=" + expiryDate + "]";
    }
}
